{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block content %}
    <div class="slider">
        <!-- UNDER CONSTRUCTION -->
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger"><strong>Error!</strong> {{ message }}</div>
                {% endfor %}

                {% if app.user %}
                    <div class="alert alert-info">Hello, <i>{{ app.user.firstname }}</i>!</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
